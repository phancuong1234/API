{
    "compilerOptions": {
        "module": "commonjs",
        "resolveJsonModule": true,
        /*"esModuleInterop": true,*/
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "./src",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "types": [
            "node"
          ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
		"node_modules"
	]
}
